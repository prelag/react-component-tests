import {render, screen, cleanup} from "@testing-library/react";
import React from "react";
import {Todo} from "../Todo";

afterEach(() => {
    cleanup()
})

test('Todo component should render non complete', () => {
    //render(<Todo item={null} />);
    const todoItem = {id: 1, title: "Brush Teeth", completed: false}

    render(<Todo item={todoItem} />)

    const todoComponent = screen.getByTestId('todo-1')
    expect(todoComponent).toBeInTheDocument()
    expect(todoComponent).toHaveTextContent("Brush Teeth")
    expect(todoComponent).not.toContainHTML('<s><h1>Brush Teeth</h1></s>')
})

test('Todo component should render complete', () => {
    const todoItem = {id: 2, title: "Wash Cat", completed: true}

    render(<Todo item={todoItem} />)

    const todoComponent = screen.getByTestId('todo-2')
    expect(todoComponent).toBeInTheDocument()
    expect(todoComponent).toHaveTextContent("Wash Cat")
    expect(todoComponent).toContainHTML('<s><h1>Wash Cat</h1></s>')
})